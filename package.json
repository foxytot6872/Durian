{
  "name": "durian-dashboard",
  "version": "1.0.0",
  "description": "Smart Durian Farm Management Dashboard with Firebase Backend",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "firebase emulators:start",
    "build": "webpack --mode production",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:hosting": "firebase deploy --only hosting",
    "serve": "firebase serve",
    "test": "jest",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write js/**/*.js css/**/*.css",
    "setup": "node firebase-setup.js",
    "init-db": "node firebase-setup.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "firebase": "^10.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "firebase-tools": "^13.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "durian",
    "farming",
    "iot",
    "dashboard",
    "firebase",
    "agriculture",
    "smart-farming",
    "arduino",
    "esp32",
    "sensors"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/durian-dashboard.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
