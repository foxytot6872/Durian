{
  "name": "durian-dashboard",
  "version": "1.0.0",
  "description": "A modern dashboard web application built with HTML, CSS, and TypeScript",
  "main": "index.html",
  "scripts": {
    "build": "tsc script.ts --target es2017 --outDir . --moduleResolution node",
    "dev": "tsc script.ts --target es2017 --outDir . --moduleResolution node --watch",
    "serve": "npx http-server . -p 3000 -o",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "dashboard",
    "typescript",
    "html",
    "css",
    "chart.js",
    "responsive"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  }
}
